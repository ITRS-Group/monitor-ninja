#!/bin/sh
prefix='/opt/monitor/op5/ninja'
AP2CONFDIR='/opt/csw/apache2/etc'

/usr/xpg4/bin/grep -q 'Include /opt/csw/apache2/etc/extra/ninja.conf' $AP2CONFDIR/httpd.conf
if [ $? -eq 1 ]; then
        echo "Include /opt/csw/apache2/etc/extra/ninja.conf" >> \
        $AP2CONFDIR/httpd.conf
fi

chown -R monitor:daemon /opt/monitor
chown -R monitor:daemon /var/www/

# svcadm restart  doesn't work, if service is not started
svcadm disable cswapache2
sleep 3
svcadm enable cswapache2

